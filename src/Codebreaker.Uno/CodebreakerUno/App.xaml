<Application x:Class="CodebreakerUno.App"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        <!-- Load Uno.UI.Toolkit resources -->
        <ToolkitResources xmlns="using:Uno.Toolkit.UI" />

        <!-- Codebreaker resources -->
        <ResourceDictionary Source="ms-appx:///Styles/FontSizes.xaml" />
        <ResourceDictionary Source="ms-appx:///Styles/Thickness.xaml" />
        <ResourceDictionary Source="ms-appx:///Views/Templates/CodeBreakerTemplates.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

  <!-- Add resources here -->

</Application>
