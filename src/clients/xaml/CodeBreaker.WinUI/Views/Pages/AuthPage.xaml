<Page
    x:Class="CodeBreaker.WinUI.Views.Pages.AuthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
            <TextBlock Style="{StaticResource HeaderTextBlockStyle}">
            Welcome to
            <Run FontStyle="Italic">CodeBreaker</Run>
            </TextBlock>
            <StackPanel Orientation="Horizontal" Spacing="15">
                <Button Command="{x:Bind Path=ViewModel.LoginCommand, Mode=OneTime}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <SymbolIcon Symbol="Contact" />
                        <TextBlock>
                            Sign in
                            <Run FontStyle="Italic">or</Run>
                            sign up
                        </TextBlock>
                    </StackPanel>
                </Button>
                <Button Command="{x:Bind Path=ViewModel.ContinueAsGuestCommand, Mode=OneTime}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <SymbolIcon Symbol="OtherUser" />
                        <TextBlock Text="Continue as Guest" />
                    </StackPanel>
                    <ToolTipService.ToolTip>
                        <ToolTip Content="You can play games, but you won't get listed in the scoreboard." Placement="Bottom" />
                    </ToolTipService.ToolTip>
                </Button>
                <ProgressRing IsActive="{x:Bind Path=ViewModel.LoginCommand.IsRunning, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
